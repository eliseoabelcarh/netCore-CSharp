

@model PanelNewTienda.Models.ProdAux


@{
    string n1 = Model.IdDeTienda.ToString();
    string n2 = Model.IdDelProducto.ToString();
    string name = n1 + n2;
}

<form asp-action="CargarImagen" asp-controller="Productos" method="post" enctype="multipart/form-data">


    <div class="card">





        <div class="form-group card-body">
            <label class="btn btn-dark" style="cursor: pointer" for="@name">Elegir Imagen</label>
            <input style="position:absolute; width:0.1px; height:0.1px ;overflow:hidden; opacity:0" type="file" id="@name" name="@name" accept="image/*" />
        </div>
        <div class="form-group">
            <span id="nombreArchivo"></span>
        </div>
        <div class="form-group">
            <input formaction="/Productos/CargarImagen" formmethod="post" type="submit" value="Guardar Cambios" class="btn btn-primary" />

        </div>



    </div>


</form>

<script>



   

    var input = document.getElementById(@name);
    input.addEventListener("change", function actuar() {
      
        var span = document.getElementById("nombreArchivo");
        var file = this.files[0].name;
        span.innerHTML = "<div>Archivo: " + file +"</br>. </div>";

    })

   


</script>
